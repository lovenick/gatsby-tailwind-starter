{
  "name": "gatsby-starter-tailwind",
  "description": "Gatsby tailwind starter",
  "version": "1.0.0",
  "author": "Nick Loveridge <nick@fusemedia.ca>",
  "dependencies": {
    "gatsby": "^2.0.19",
    "gatsby-image": "^2.0.15",
    "gatsby-plugin-manifest": "^2.0.5",
    "gatsby-plugin-offline": "^2.0.5",
    "gatsby-plugin-react-helmet": "^3.0.0",
    "gatsby-plugin-sharp": "^2.0.7",
    "gatsby-source-filesystem": "^2.0.4",
    "gatsby-transformer-sharp": "^2.1.4",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-helmet": "^5.2.0",
    "tailwindcss": "^0.6.6"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production npm run build:css && gatsby build",
    "build:css": "postcss ./src/css/tailwind.css -o ./src/css/tailwind.build.css",
    "build:css:watch": "postcss ./src/css/tailwind.css -o ./src/css/tailwind.build.css  --watch",
    "dev": "npm run build:css && gatsby develop",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.1.0",
    "autoprefixer": "^9.3.1",
    "cssnano": "^4.1.7",
    "postcss-cli": "^6.0.1",
    "prettier": "^1.14.2"
  },
  "repository": {
    "type": "git",
    "url": ""
  }
}
